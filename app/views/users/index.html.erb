<% provide(:title, "Users") %> 
<% content_for :main do%>
	<% unless !(@privileged_user_is_logged_in) %>
		<h4>Users</h4>
		<%= link_to "Add New User", new_user_path, class: "right" unless !(@admin_is_logged_in) %>
		<table>
			<tr>
				<th></th>
				<th>Name</th>
				<th>Username</th>
				<th>Category</th>
				<th colspan="3"> </th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.full_name %></td>
					<td><%= user.username %></td>
					<td>
						<% if user.admin? %>
							Admin
						<% elsif user.doctor? %>
							Doctor
						<% elsif user.receptionist? %>
							Receptionist
						<% elsif user.patient? %>
							Patient
						<%else%>
							<span class = "pending">Pending Approval</span>
						<%end%>
					</td>
					<td><%= link_to "Show", user_path(user) %></td>
					<td><%= link_to "Edit", edit_user_path(user) %></td>
					<td><%= link_to "Destroy", method: :delete, data: { confirm: "Are you sure?" } unless !(@admin_is_logged_in) %></td>
				</tr>
			<%end%>
		</table>
	<%end%>
<%end%>
