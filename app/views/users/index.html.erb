<% provide(:title, "Users") %> 
<% content_for :main do%>
	<h4>Users</h4>
	<table>
		<tr>
			<th></th>
			<th>Name</th>
			<th>Username</th>
			<th>Category</th>
			<th colspan="3"> </th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.first_name %> <%= user.middle_name %> <%= user.last_name %></td>
				<td><%= user.username %></td>
				<td>
					<% if user.admin? %>
						Admin
					<% elsif user.doctor? %>
						Doctor
					<% elsif user.receptionist? %>
						Receptionist
					<% elsif user.patient? %>
						Patient
					<%else%>
						<span class = "pending">Pending Approval</span>
					<%end%>
				</td>
				<td><%= link_to "Show", user_path(user) %></td>
				<td><%= link_to "Edit", edit_user_path(user) %></td>
				<% unless !(@current_user && @current_user.admin?) %>
					<td><%= link_to "Destroy", method: :delete, data: { confirm: "Are you sure?" } %></td>
				<%end%>
			</tr>
		<%end%>
	</table>

<%end%>
