<% if flash.present? %>
		<% flash.each do |key, value| %>
			<div data-alert class="alert-box radius <%= key.to_s == ("notice" || "success") ? "success" : "alert" %> white-font">
				<h4><%= value %></h4>
				<a href = "#" class = "close">&times;</a>
				<% if @object.present? && @object.errors.any? %>
					<h5>The form contains <%= pluralize(@object.errors.count, "error")%>.</h5>
					<ul>
						<% @object.errors.full_messages.each do |msg|%>
							<li><%=msg%></li>
						<%end%>
					</ul>
				<%end%>
			</div>
		<%end%>
<%end%>

