<% provide(:title, "Your Doctors") %> 
<% content_for :main do%>
	<h4>Your Doctors</h4>
	<table>
		<tr>
			<th></th>
			<th>Name</th>
			<th>Username</th>
			<th>Category</th>
			<th colspan="3"> </th>
		</tr>
		<% @doctors.each do |doctor| %>
			<tr>
				<td><%= doctor.id %></td>
				<td><%= doctor.first_name %> <%= doctor.middle_name %> <%= doctor.last_name %></td>
				<td><%= doctor.username %></td>
				<td>
					<% if doctor.admin? %>
						Admin
					<% elsif doctor.doctor? %>
						Doctor
					<% elsif doctor.receptionist? %>
						Receptionist
					<% elsif doctor.doctor? %>
						Patient
					<%else%>
						<span class = "pending">Pending Approval</span>
					<%end%>
				</td>
				<td><%= link_to "Show", doctor_path(doctor) %></td>
				<% unless !((@current_user && (@current_user.id == doctor.id)) || @current_user.admin?) %>
					<td><%= link_to "Edit", edit_doctor_path(doctor) %></td>
				<%end%>
				<% unless !(@current_user && @current_user.admin?) %>
					<td><%= link_to "Destroy", method: :delete, data: { confirm: "Are you sure?" } %></td>
				<%end%>
			</tr>
		<%end%>
	</table>

<%end%>
