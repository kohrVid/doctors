<% provide(:title, "Edit Doctor") %> 
<% content_for :main do%>
	<h4>Edit Doctor</h4>
	<%= render "form" %>
	<p>
		<% unless !(@current_user && (@current_user.admin? || @current_user.doctor? || @current_user.receptionist?)) %>
			<%= link_to "<< Back to Doctors", doctors_path %> | 
		<%end%>
		<% unless !(@current_user && @current_user.admin?) %>
			<%= link_to "Destroy", @doctor, method: :delete, data: { confirm: "Are you sure?" } %> | 
		<%end%>
		<%= link_to (@doctor.title + " " + @doctor.first_name_last_name), doctor_path(@doctor) %>
	</p>

<%end%>
