<% provide(:title, "Show Testimonial") %> 
<% content_for :main do%>
	<% breadcrumb :testimonial, @testimonial %>
	<h4><%= Testimonial %></h4>
	<p>
		<strong>Body:</strong> <%= @testimonial.body %>
	</p>
	<p>
		<strong>Author:</strong> <%= @testimonial.author %>
	</p>
	<p>
		<strong>Date:</strong> <%= @testimonial.date.strftime("%d %B %Y") %>
	</p>
	<p>
		<strong>Date Created:</strong> <%= @testimonial.created_at.strftime("%d %B %Y %H:%M:%S") %><br />
		<strong>Date Last Modified:</strong> <%= @testimonial.updated_at.strftime("%d %B %Y %H:%M:%S") %>
	</p>

	<p>
		<%= link_to "<< Back to Testimonials", testimonials_path %> | 
		<%= link_to "Edit", edit_testimonial_path(@testimonial) %> | 
		<%= link_to "Destroy", @testimonial, method: :delete, data: { confirm: "Are you sure? Deleted testimonials cannot be recovered." } %>
	</p>

<%end%>

