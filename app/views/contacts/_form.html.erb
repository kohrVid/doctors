<%= form_for @contact do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :message %><br />
		<%= f.text_area :message %>
	</p>
	<p>
		<%= f.label :nickname, class: "hide" %><br />
		<%= f.text_field :nickname, class: "hidden" %>
	</p>
	<p>
		<%= f.submit "Send", class: "button" %>
	</p>
<%end%>
