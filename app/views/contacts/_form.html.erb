<%= form_for @contact do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :message %><br />
		<%= f.text_area :message, rows: 5 %>
	</p>
	<p class = "hide">
		<%= f.label :nickname %><br />
		<%= f.text_field :nickname %>
	</p>
	<p>
		<%= f.submit "Send", class: "button" %>
	</p>
<%end%>
