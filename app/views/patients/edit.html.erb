<% provide(:title, "Edit Patient") %> 
<% content_for :main do%>
	<h4>Edit Patient</h4>
	<%= render "form" %>
	<p>
		<% unless !(@current_user && (@current_user.admin? || @current_user.doctor? || @current_user.receptionist?)) %>
			<%= link_to "<< Back to Patients", patients_path %> | 
		<%end%>
		<% unless !(@current_user && @current_user.admin?) %>
			<%= link_to "Destroy", @patient, method: :delete, data: { confirm: "Are you sure?" } %> | 
		<%end%>
		<%= link_to (@patient.full_name), patient_path(@patient) %>
	</p>

<%end%>
