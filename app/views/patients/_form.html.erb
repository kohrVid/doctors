<%= form_for @patient do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :first_name, "First Name" %><br />
		<%= f.text_field :first_name %>
	</p>
	<p>
		<%= f.label :middle_name, "Middle Name" %><br />
		<%= f.text_field :middle_name %>
	</p>
	<p>
		<%= f.label :last_name, "Last Name" %><br />
		<%= f.text_field :last_name %>
	</p>
	<p>
		<div class = "small_input">
			<%= f.label :dob, "Date of Birth" %><br />
			<%= f.date_select(:dob, method: :post, start_year: 1899, end_year: DateTime.now.year) %>
		</div>
	</p>
	<p>
		<%= f.label :gender %><br />
		<%= f.text_field :gender %>
	</p>
	<p>
		<%= f.label :nhs_number, "NHS Number" %><br />
		<%= f.text_field number_with_delimiter(:nhs_number, :groupings => [3, 3, 4]) %>
	</p>
	<p>
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation, "Password Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.label :phone %><br />
		<%= f.text_field :phone %>
	</p>
	<%= f.fields_for :address do |address| %>
		<p>
			<%= address.label :street %><br />
			<%= address.text_field :street %>
		</p>

		<p>
			<%= address.text_field :address_line2 %>
		</p>

		<p>
			<%= address.label :city %><br />
			<%= address.text_field :city %>
		</p>

		<p>
			<%= address.label :county %><br />
			<%= address.text_field :county %>
		</p>

		<p>
			<%= address.label :post_code %><br />
			<%= address.text_field :post_code %>
		</p>
	<%end%>
	<% unless !(privileged_user_is_logged_in) %>
		<p>
			<%= f.label :approved %>
			<%= f.check_box :approved %>
		</p>
		<p>
			<%= f.label :locked %>
			<%= f.check_box :locked %>
		</p>
	<%end%>
	
	<% unless !(admin_is_logged_in) %>
		<p>
			<%= f.label :receptionist %>
			<%= f.check_box :receptionist %>
		</p>
		<p>
			<%= f.label :doctor %>
			<%= f.check_box :doctor %>
		</p>
		<p>
			<%= f.label :admin %>
			<%= f.check_box :admin %>
		</p>
	<%end%>
	<p>
		<%= f.submit "Submit", class: "button" %>
	</p>
<%end%>

